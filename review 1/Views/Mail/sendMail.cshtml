
@{
    ViewData["Title"] = "sendMail";
    Layout = "~/Views/layout/_Layout.cshtml";
}

<h2>Send Mail</h2>

<form action="/Mail/sendMail" method="post">

    <div class="form-group">
        <label>Title</label>
        <input name="title" class="form-control" placeholder="enter title" />
    </div>

    <div class="form-group">
        <label>Body</label>
        <textarea name="body" class="form-control" placeholder="enter title" rows="4"></textarea>
    </div>
    <div class="form-group">
        <input type="submit" value="send" class="btn btn-primary" />
    </div>
</form>
