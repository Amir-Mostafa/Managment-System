@model review_1.Models.DepartmentVM

@{
    ViewData["Title"] = "create";
    Layout = "~/Views/layout/_Layout.cshtml";
}


<h2 class="text-center text-info">Create Department</h2>

<form action="/department/create" method="post">
    <div class="form-group">
        <label>Department Name</label>
        <input asp-for="DepartmentName" class="form-control" />
        <span class="text-danger" asp-validation-for="DepartmentName"></span>
    </div>
    <div class="form-group">
        <label>Department code</label>
        <input asp-for="DepartmentCode" class="form-control" />
        <span class="text-danger" asp-validation-for="DepartmentCode"></span>
    </div>
    <div>
        <input type="submit" value="Add" class="btn btn-primary" />
    </div>

</form>
<script src="~/jquery/jquery.min.js"></script>
<script src="~/jquery-validate/jquery.validate.min.js"></script>
<script src="~/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
